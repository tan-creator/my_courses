<div class="mt-4">
    <div class="row">
        {{#each docs}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="/courses/{{this.slug}}">
                    <img class="card-img-top" src="{{this.Image}}" alt="Card image cap">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}" style="text-decoration: none;">
                        <h5 class="card-title">{{this.Name}}</h5>
                    </a>
                    <p class="card-text">{{this.Description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">Go to course</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>